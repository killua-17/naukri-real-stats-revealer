{
  "manifest_version": 3,
  "name": "Naukri Real Job Stats",
  "version": "1.0",
  "description": "Reveals real applicant counts and view counts on Naukri job listings to help you decide where to apply.",
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://www.naukri.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["https://www.naukri.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://www.naukri.com/job-listings*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon128.png"
  }
}